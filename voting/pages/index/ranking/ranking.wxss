.ranking-title{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  overflow: hidden;
  height: 70rpx;
  line-height: 70rpx;
}
.ranking-title text,.ranking-content text,.ranking-content view{
  float: left;
  text-align: center;
}
.ranking{
  width: 15%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.serial-number{
  width:20%;
}
.ranking-name{
  width:40%;
}
.ranking-sentiment{
  width:25%;
}
.ranking-content{
  width: 100%;
  background: #fff;
  margin-top: 4rpx;
  overflow: hidden;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
}
.sentiment-color{
  color: #1ec2cb;
}
.ranking text{
  width: 50rpx;
  border: 1rpx solid #1ec2cb;
  padding: 5rpx;
}
.ranking image{
  margin-top: 15rpx;
  width: 40rpx;
  height: 50rpx;
}