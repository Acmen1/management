.mask-btm {
  position: fixed;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}
button{
  list-style: none
}
button[size=mini]{
  padding: 0 1em;
  
}
.mask-content {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 760rpx;
  background: #fff;
}

.mask-name {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #f2f2f2;
  font-size: 0rpx;
  text-align: center;
}

.mask-name-text {
  padding-left: 70rpx;
  font-size: 28rpx;
}

.mask-img {
  height: 30rpx;
  width: 30rpx;
  float: right;
  padding: 25rpx 40rpx 0 0;
}

.mask-type {
  width: 94%;
  margin-left: 3%;
  overflow: hidden;
}

.mask-options {
  width: 152rpx;
  margin: 40rpx 0 30rpx 18rpx;
  float: left;
}

.mask-options-img {
  width: 100%;
  height: 152rpx;
  overflow: hidden;
  border-radius: 20rpx;
  border: 5rpx solid #fff;
}

.mask-options-img image {
  width: 100%;
  height: 100%;
}

.optbdr {
  border-style: none;
  border: 5rpx solid #1dc1ca;
}

.mask-sentiment {
  text-align: center;
  margin-top: 20rpx;
}

.mask-sentiment text {
  display: block;
  margin-top: 10rpx;
  color: #000;
}

.mask-sentiment .mask-child {
  color: #adadad;
}

.mask-plsnbm {
  margin-top: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #adadad;
}

.mask-operation-num {
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content:center;
  margin-top: 30rpx;
}

.mask-operation-num input {
  height: 56rpx;
  width: 100rpx;
  border: 1rpx solid #eee;
  background-color: #fff;
  padding: 0rpx 8rpx;
  text-align: center;
  color:  #adadad;
  font-size: 24rpx;
}

.mask-add, .mask-red {
  text-align: center;
  line-height: 60rpx;
  width: 60rpx;
  background: #eee;
}

.mask-input {
  text-align: center;
}
.mask-sentiment-btn{
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 26rpx;
  width: 50%;
  margin:30rpx 25%;
  background: #1ec2cb;
  color: #fff;
  border-radius:5px; 
}
